[core]
	editor = nvim
  whitespace = -trailing-space
	pager = delta --side-by-side
[user]
	email = imrane.aabbou@gmail.com
	name = Imrane Aabbou
[color]
  ui = auto
[help]
	autocorrect = true
[status]
	# short = true
  submoduleSummary = true
; [format]
; 	pretty = %C(auto)%h%d %s
[diff]
  mnemonicPrefix = true
[grep]
  break = true
  heading = true
  lineNumber = true
[alias]
  aliases = !git config --get-regexp alias | sed -re 's/alias\\.(\\S*)\\s(.*)$/\\1 = \\2/g'
  reword = commit --amend
  untrack = rm --cache -- 
  uncommit = reset --soft HEAD~1
  l = log --oneline --all --graph --abbrev-commit --decorate --date=relative --pretty=format:'%C(auto)%h%d %s %C(8)- <%an> (%cr) %Creset'
  s = status -sb
[push]
  followTags = true
  autoSetupRemote = true
[fetch]
  recurseSubmodules = on-demand
